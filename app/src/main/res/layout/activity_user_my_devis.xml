<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.findgarage10.UserMyDevisActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@color/colorAccent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5">
                <TextView
                    android:text="@string/ListMyDevisLabel"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ListView
                    android:id="@+id/my_devis_lstView"
                    android:layout_width="match_parent"
                    android:layout_height="222dp"
                    android:clickable="true">

                </ListView>

            </LinearLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:columnCount="2"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_my_devis_back_home"
                    android:text="@string/btn_back_home"
                    android:layout_width="wrap_content"
                    android:layout_column="0"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btn_my_devis_show_confirmed"
                    android:text="@string/btn_user_show_confirmed"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:layout_column="1"
                    android:layout_height="wrap_content" />
            </GridLayout>
        </LinearLayout>


</LinearLayout>
